<!DOCTYPE html>
<html lang="en" id="top">
<head>

  <!-- Basic Page Needs
  –––––––––––––––––––––––––––––––––––––––––––––––––– -->
  <meta charset="utf-8">
  <title>Jensw.be</title>
  <meta name="description" content="Portfolio of Jens Willemsens">
  <meta name="author" content="Jens Willemsens">

  <!-- Mobile Specific Metas
  –––––––––––––––––––––––––––––––––––––––––––––––––– -->
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <!-- Favicon
  –––––––––––––––––––––––––––––––––––––––––––––––––– -->
  <link rel="icon" type="image/png" href="images/favicon.ico">
  
  <!-- Fonts
  –––––––––––––––––––––––––––––––––––––––––––––––––– -->
  <link href="//fonts.googleapis.com/css?family=Raleway:400,300,600" rel="stylesheet" type="text/css">
  
  <!-- Stylesheets
  –––––––––––––––––––––––––––––––––––––––––––––––––– --> 
  <link href="/assets/css/all.css" rel="stylesheet" type="text/css">

</head>
<body>

  <!-- Primary Page Layout
  –––––––––––––––––––––––––––––––––––––––––––––––––– -->
  <div class="container">
    
    <%block name="content"></%block>

	%for project in data['projects']['projects']:
    <div class="card">
      <div class="row">
        <div class="twelve columns">
          <div class="project">
            <div class="center-text">
              <img class="project-logo"
                   src="images/${project['logo']['file']}"
                   title="${project['logo']['alt']}"
                   %if project['logo'].get('padding-top'):
                   	 style="padding-top: 20px;"
                   %endif
              />
              
              <p class="title">${project['name']}</p>
              <p>${project['scope']} - <a target="_blank" href="${project['url']}">${project['url']}</a></p>
              <p>${project['description']}</p>
            </div>
          </div>
        </div>
      </div>
    </div>
    %endfor

    <div class="row">
      <p><a id="to-top" href="#top" title="To top of page" class="button button-primary">To top</a></p>
    </div>

  </div>

  <!-- End Document
  –––––––––––––––––––––––––––––––––––––––––––––––––– -->
</body>
</html>
